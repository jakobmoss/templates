arxivId = {1510.00300},
author = {Sonoi, T. and Samadi, R. and Belkacem, K. and Ludwig, H.-G. and Caffau, E. and Mosser, B.},
doi = {10.1051/0004-6361/201526838},
eprint = {1510.00300},
file = {:Users/moss/Library/Application Support/Mendeley Desktop/Downloaded/Sonoi et al. - 2015 - Surface-effect corrections for solar-like oscillations using 3D hydrodynamical simulations(2).pdf:pdf},
issn = {0004-6361},
journal = {Astronomy {\&} Astrophysics},
keywords = {asteroseismology,atmospheres,convection,low-mass,oscillations,solar-type,stars},
pages = {A112},
title = {{Surface-effect corrections for solar-like oscillations using 3D hydrodynamical simulations}},
url = {http://arxiv.org/abs/1510.00300},
volume = {583},
year = {2015}
}
