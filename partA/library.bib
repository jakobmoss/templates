author = {Deheuvels, S. and Brand{\~{a}}o, I. and {Silva Aguirre}, V. and Ballot, J. and Michel, E. and Cunha, M. S. and Lebreton, Y. and Appourchaux, T.},
doi = {10.1051/0004-6361/201527967},
eprint = {1603.02332},
file = {:Users/moss/Library/Application Support/Mendeley Desktop/Downloaded/Deheuvels et al. - 2016 - Measuring the extent of convective cores in low-mass stars using Kepler data towards a calibration of core ove.pdf:pdf},
journal = {Astronomy {\&} Astrophysics},
keywords = {asteroseismology,convection,evolution,interiors,stars},
