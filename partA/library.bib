doi = {10.1051/0004-6361:20042185},
file = {:Users/moss/Library/Application Support/Mendeley Desktop/Downloaded/J{\o}rgensen, Lindegren - 2005 - Determination of stellar ages from isochrones Bayesian estimation versus isochrone fitting.pdf:pdf},
journal = {Astronomy {\&} Astrophysics},
keywords = {data analysis,evolution,fundamental parameters,methods,solar neighbourhood,stars,statistical},
number = {1},
